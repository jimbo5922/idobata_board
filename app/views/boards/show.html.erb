<div class="board">
  <div class="show_board" id="board-<%= @board.id %>">
    <span class="title"><%= @board.title %></span>
    <span class="description"><%= @board.description %></span>
  </div>

  <div class="responces">
    <% @board.responces.each do |responce| %>
      <div class="responce">
        <span><%= responce.user.name %></span>
        <span><%= l responce.created_at %></span>
        <div class="content"><%= responce.content %></div>
      </div>
    <% end %>
  </div>
  
  <div class="responce_form">
    <%= form_with(model:[@board, @responce]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= f.text_area :content, placeholder: "レスを入力" %>
          <%= f.submit "投稿する", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>