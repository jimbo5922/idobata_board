<% provide(:title, 'スレッド作成') %>
<h1>スレッド作成</h1>

<%= form_with(model: @board, local: true) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= f.text_field :title, placeholder: "スレッドタイトルを入力" %>
      <%= f.text_area :description, placeholder: "スレッドの説明を入力" %>
      <%= f.submit "スレッドを作成する", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>